<% include partials/header %>

<div class='container'>
    <h1 class='text-center'>Create a new Campground</h1>
    <div class='row new-campground-form'>
        <form action='/campgrounds' method='post'>
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" placeholder='Enter a Name' name="newCampgroundName">
            </div>
            <div class="form-group">
                <label>Image URL</label>
                <input class="form-control" type="text" placeholder='Enter an image URL' name="newCampgroundImage">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="5" placeholder='Enter a Description' name="newCampgroundDescription"></textarea>
            </div>
            <div class="form-group">
                <button class='btn btn-primary'>
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Campground
                </button>
                <a class='btn btn-warning' href='/campgrounds'>Cancel</a>
            </div>
        </form>
    </div>
    
<% include partials/footer %>