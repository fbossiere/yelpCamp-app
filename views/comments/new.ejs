<% include ../partials/header %>

    <div class='container'>
        <h1 class='text-center'>Add a new Comment</h1>
        <div class='row new-campground-form'>
            <form action='/campgrounds/<%= campground._id %>/comments' method='POST' class='well'>
                <div class="form-group">
                    <label>Comment</label>
                    <textarea class="form-control" rows="5" placeholder='Enter a comment' name="comment[text]"></textarea>
                </div>
                <div class="form-group">
                    <button class='btn btn-success'>
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Comment
                </button>
                    <a class='btn btn-warning' href='/campgrounds/<%= campground._id %>'>Cancel</a>
                </div>
            </form>
        </div>

        <% include ../partials/footer %>
